<% content_for :page_title do %><%= t('user_dashboard', 'Home') %><% end %>
<% css_bundle :dashboard %>
<% js_bundle :dashboard %>

<% js_bundle :dashboard_tour %>

<!-- adding hopscotch.css and hopscotch.js to dashboard page -->
<link rel="stylesheet" type="text/css" href="/custom/dist/css/hopscotch.css">

<% content_for :auto_discovery do %>
  <% if @current_user %>
      <%= auto_discovery_link_tag(:atom, feeds_user_format_path(@current_user.feed_code, :atom), {:title => t('user_atom_feed', "User Atom Feed (All Courses)")}) %>
  <% end %>
<% end %>

<% content_for :right_side do %>
  <div class="placeholder"></div>
<% end %>

<div id="dashboard">
  <%= render :partial => 'shared/dashboard_invitation', :collection => @pending_invitations %>
  <%= render :partial => 'shared/dashboard_messages' %>

  <div class="ic-Dashboard-header">
    <div class="grid-row bottom-xs">
      <div class="col-xs-9">
        <h1 class="ic-Dashboard-header_title"><%= t :dashboard, "Home" %></h1>
      </div>
      <div class="col-xs-3 end-xs ic-Dashboard-content--align-right">
      <% if planner_enabled? %>
        <div id="dashboard-planner-header" class="CanvasPlanner__HeaderContainer" style="display: <%= show_planner? ? 'block' : 'none' %>"></div>
      <% end %>
      <div id="DashboardOptionsMenu_Container"></div>
      </div>
    </div>
  </div>
  <% if planner_enabled? %>
    <% js_bundle :student_planner %>
    <div id="dashboard-planner" class="StudentPlanner__Container" style="display: <%= show_planner? ? 'block' : 'none' %>"></div>
  <% end %>
  <div id="dashboard-activity" class="ic-Dashboard-Activity" style="display: <%= show_recent_activity? ? 'block' : 'none' %>">
    <%= render :partial => 'shared/recent_activity' %>
  </div>


  <%= render :partial => 'shared/dashboard_card' %>
</div>

<div class="welcome-page-outer">
  <div class="welcome-page-inner">
    <img id="tlm-logo" src="/custom/img/TLM_logo_resized.jpg">
    <div class="header-main-wrapper">
      <div class="welcome-page-header">
        <h1>Welcome <span id="dynamic-name"></span>!</h1>  
      </div>

      <div class="welcome-page-main">
        <video class="video-player" src="/custom/student/videos/200 - Canvas Overview for Students.mp4" poster="/custom/student/posters/student-200-canvas-overview.png" controls></video>   
      </div>
    </div>

    <div class="welcome-page-footer">
      <h3>What would you like to do now?</h3>
      <button class="btn btn-danger skip-btn">SKIP TOUR AND GO HOME</button><button class="btn btn-primary tour-btn">GO ON A TOUR OF CANVAS</button><br />
      <div class="form-check">
        <label class="form-check-label">
          <input id="select-tour" class="form-check-input" type="checkbox" value="false">
          Don't show this page again
        </label>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/custom/dist/js/hopscotch.js"></script>



